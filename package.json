{
  "name": "sampling-program-design",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "chcp 65001 &&  vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder  --win --ia32",
    "preview": "vite preview"
  },
  "config": {
    "arch": "ia32"
  },
  "dependencies": {
    "@vueuse/electron": "^10.2.0",
    "dayjs": "^1.11.9",
    "echarts": "^5.4.2",
    "electron-edge-js": "^23.0.0",
    "electron-store": "^8.1.0",
    "ini": "^4.1.1",
    "pinia": "^2.1.4",
    "vue": "^3.3.4",
    "vue-echarts": "^6.6.0",
    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@arco-design/web-vue": "^2.47.1",
    "@iconify-json/ant-design": "^1.1.5",
    "@iconify-json/noto": "^1.1.11",
    "@vitejs/plugin-vue": "^4.1.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "electron": "^23.3.0",
    "electron-builder": "^24.4.0",
    "naive-ui": "^2.34.4",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.2",
    "unplugin-auto-import": "^0.16.4",
    "unplugin-icons": "^0.16.3",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.3.9",
    "vite-plugin-electron": "^0.12.0",
    "vue-tsc": "^1.4.2"
  },
  "electronDownload": {
    "mirror": "https://npm.taobao.org/mirrors/electron/"
  },
  "build": {
    "appId": "com.zzk.SamplingProgram",
    "productName": "SamplingProgram",
    "asar": true,
    "copyright": "Copyright © 2023 赵子奎",
    "directories": {
      "output": "release/"
    },
    "files": [
      "dist",
      "dist-electron/main.js"
    ],
    "extraResources": [
      {
        "from": "public/dll/Measurement.dll",
        "to": "Measurement.dll"
      },
      {
        "from": "public/customConfig.ini",
        "to": "customConfig.ini"
      },
      {
        "from": "public/cache.json",
        "to": "cache.json"
      }
    ],
    "mac": {
      "artifactName": "${productName}-${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "public/img/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "allowElevation": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "public/img/favicon.ico",
      "uninstallerIcon": "public/img/favicon.ico",
      "installerHeader": "public/img/favicon.ico",
      "uninstallDisplayName": "${productName}${version}",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "license.txt"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080"
      }
    ],
    "releaseInfo": {
      "releaseNotes": "版本更新的具体内容"
    }
  }
}
